            android:layout_width="match_parent"
            android:layout_height="@dimen/x44">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/currency"
                android:textColor="@color/colorDashboardsPointer"
                android:textSize="@dimen/x18"/>


            <ImageView
                android:layout_width="@dimen/x10"
                android:layout_height="@dimen/x18"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x15"
                android:scaleType="fitXY"
                android:src="@drawable/return_ui"/>


            <!--上方透明的按钮-->
            <ImageView
                android:id="@+id/iv_settings_currency_finish"
                android:layout_width="@dimen/x50"
                android:layout_height="match_parent"
                android:background="@color/colorTransparent"/>

        </RelativeLayout>
        <!--line-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:src="@drawable/line_ui"/>

        <!--USD-->
        <RelativeLayout
            android:layout_marginTop="@dimen/x34"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x44"
            android:background="@color/colorDialogBackGround">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x15"
                android:gravity="center_vertical"
                android:text="@string/usd"
                android:textColor="@color/colorTextColorDemo"
                android:textSize="@dimen/x16"/>


            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x14"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x340"
                android:scaleType="fitXY"
                android:src="@drawable/dui"/>


        </RelativeLayout>
        <!--Line-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:src="@drawable/line_ui"/>


        <!--rmd-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x44"
            android:background="@color/colorDialogBackGround">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x15"
                android:gravity="center_vertical"
                android:text="@string/rmd"
                android:textColor="@color/colorTextColorDemo"
                android:textSize="@dimen/x16"/>


            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x14"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x340"
                android:scaleType="fitXY"
                android:src="@drawable/dui"/>


        </RelativeLayout>
        <!--Line-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:src="@drawable/line_ui"/>

        <!--EURO-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x44"
            android:background="@color/colorDialogBackGround">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x15"
                android:gravity="center_vertical"
                android:text="@string/euro"
                android:textColor="@color/colorTextColorDemo"
                android:textSize="@dimen/x16"/>


            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x14"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x340"
                android:scaleType="fitXY"
                android:src="@drawable/dui"/>


        </RelativeLayout>
        <!--Line-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:src="@drawable/line_ui"/>

        <!--RUBLES-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x44"
            android:background="@color/colorDialogBackGround">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x15"
                android:gravity="center_vertical"
                android:text="@string/rubles"
                android:textColor="@color/colorTextColorDemo"
                android:textSize="@dimen/x16"/>


            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x14"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x340"
                android:scaleType="fitXY"
                android:src="@drawable/dui"/>


        </RelativeLayout>
        <!--Line-->
        <ImageView
            android:layout_width="match_parent"
