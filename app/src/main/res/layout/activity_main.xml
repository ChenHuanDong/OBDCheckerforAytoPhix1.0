<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOBDbackground"
    tools:context="com.example.administrator.obdcheckerforaytophix10.MainActivity">

    <!--占满屏幕的帧布局-->
    <FrameLayout
        android:id="@+id/frame_main_replace"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y602"
        android:background="@color/colorOBDbackground"/>

    <!--上方透明按钮（最底层）-->
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="@dimen/y45"
        android:layout_alignParentBottom="true"
        android:background="@color/colorTransparent"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/btn_main_obd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorTransparent"
            android:button="@null"/>


        <RadioButton
            android:id="@+id/btn_main_persional"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorTransparent"
            android:button="@null"/>

    </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y39"
        android:layout_alignParentBottom="true"
        android:background="@color/mainobdback">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y39"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_mainobd_obd"
                android:layout_width="0dp"
                android:layout_height="@dimen/x34"
                android:layout_weight="1"
                android:background="@mipmap/mainobdobdb"
                android:scaleType="fitXY"/>

            <ImageView
                android:id="@+id/iv_mainobd_personal"
                android:layout_width="0dp"
                android:layout_height="@dimen/x34"
                android:layout_weight="1"
                android:background="@mipmap/mainobdpersonalb"
                android:scaleType="fitXY"/>


        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="@dimen/x5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y39"
            android:orientation="horizontal">

            <!--187 - 55 -->
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/x20"
                android:layout_marginTop="@dimen/x8"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/obdfeatures"
                android:textColor="@color/mainobdback"
                android:textSize="@dimen/x12"
                android:textStyle="bold"/>

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/x20"
                android:layout_marginTop="@dimen/x8"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/vehicleinformation"
                android:textColor="@color/mainobdback"
                android:textSize="@dimen/x12"
                android:textStyle="bold"/>


        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>
